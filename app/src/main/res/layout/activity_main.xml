<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="d_ac1.finalafb.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <RelativeLayout
                android:id="@+id/Intro"
                android:background="@color/Red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/Introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="@string/Intro"
                    android:paddingBottom="20dp"/>

            </RelativeLayout>//Intro App

            <RelativeLayout
                android:id="@+id/Recordatorios"
                android:background="@color/Red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Intro"
                android:layout_marginBottom="8dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/RecTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:text="@string/Recordatorio"
                    />

                <CheckBox
                    android:id="@+id/Rec1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RecTitulo"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/TextRec1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/Rec1"
                    android:layout_alignBaseline="@+id/Rec1"
                    android:textColor="@android:color/white"
                    android:text="@string/Rec1"
                    />

                <CheckBox
                    android:id="@+id/Rec2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Rec1"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/TextRec2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/Rec2"
                    android:layout_alignBaseline="@+id/Rec2"
                    android:textColor="@android:color/white"
                    android:text="@string/Rec2"
                    />

                <CheckBox
                    android:id="@+id/Rec3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Rec2"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/TextRec3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/Rec3"
                    android:layout_alignBaseline="@+id/Rec3"
                    android:textColor="@android:color/white"
                    android:text="@string/Rec3"
                    />

                <CheckBox
                    android:id="@+id/Rec4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Rec3"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/TextRec4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/Rec4"
                    android:layout_alignBaseline="@+id/Rec4"
                    android:textColor="@android:color/white"
                    android:text="@string/Rec4"
                    />

                <TextView
                    android:id="@+id/BarraCargarText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_below="@+id/Rec4"
                    android:textColor="@android:color/black"
                    android:paddingTop="5dp"
                    android:text="@string/BarraPredet"
                    />

                <ProgressBar
                    android:id="@+id/BarraCargar"
                    android:max="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                    android:layout_below="@+id/BarraCargarText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="5dp"
                    android:progress="0"/>

            </RelativeLayout>//Tips

            <RelativeLayout
                android:id="@+id/Tips"
                android:background="@color/Red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/Recordatorios">

                <TextView
                    android:id="@+id/Consejos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:text="@string/Consejos"
                    />

                <TextView
                    android:id="@+id/RandTip"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/FrasePredet"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/Consejos"/>

                <Button
                    android:id="@+id/NewTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RandTip"
                    android:layout_centerHorizontal="true"
                    android:text="@string/BotonConsejos"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>//Consejos

            <RelativeLayout
                android:id="@+id/Rutas"
                android:background="@color/Red"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/Calc">

                <TextView
                    android:id="@+id/FotosRutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:text="@string/TituloRutas"
                    />

                <HorizontalScrollView
                    android:layout_below="@+id/FotosRutas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:scrollbarSize="5dp"
                    android:scrollbarStyle="insideOverlay">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/SanJose"
                            android:layout_width="350dp"
                            android:layout_height="260dp"
                            android:src="@drawable/sanjose"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SJ"
                            android:textColor="@android:color/white"
                            android:id="@+id/SJ"
                            android:layout_alignRight="@+id/SanJose"
                            android:layout_alignEnd="@+id/SanJose"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="3dp"
                            android:layout_below="@+id/SanJose"
                            android:layout_marginRight="111dp"
                            android:layout_marginEnd="111dp" />

                        <ImageView
                            android:id="@+id/Baiona"
                            android:layout_width="350dp"
                            android:layout_height="240dp"
                            android:src="@drawable/baiona"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/SanJose"
                            android:layout_toEndOf="@+id/SanJose" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Baiona"
                            android:textColor="@android:color/white"
                            android:layout_alignRight="@+id/Baiona"
                            android:layout_alignEnd="@+id/Baiona"
                            android:layout_marginTop="5dp"
                            android:layout_alignBaseline="@+id/SJ"
                            android:layout_marginRight="111dp"
                            android:layout_marginEnd="111dp" />

                        <ImageView
                            android:id="@+id/Mallorca"
                            android:layout_width="280dp"
                            android:layout_height="240dp"
                            android:src="@drawable/mallorca"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/Baiona"
                            android:layout_toEndOf="@+id/Baiona" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Mallorca"
                            android:textColor="@android:color/white"
                            android:layout_alignRight="@+id/Mallorca"
                            android:layout_alignEnd="@+id/Mallorca"
                            android:layout_marginTop="5dp"
                            android:layout_alignBaseline="@+id/SJ"
                            android:layout_marginRight="80dp"
                            android:layout_marginEnd="80dp" />

                    </RelativeLayout>

                </HorizontalScrollView>

            </RelativeLayout>//Rutas

            <RelativeLayout
                android:id="@+id/Calc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Red"
                android:elevation="8dp"
                android:layout_below="@+id/Tips"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/TituloCalc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:text="@string/TituloCalculadora"
                    />

                <TextView
                    android:id="@+id/DescripcionCalc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/TituloCalc"
                    android:text="@string/DescripcionCalculadora"
                    />

                <EditText
                    android:id="@+id/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/DescripcionCalc"
                    android:hint="@string/km"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    />

                <EditText
                    android:id="@+id/consumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/km"
                    android:hint="@string/cons"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    />

                <Spinner
                    android:id="@+id/SpinnerCombustibles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_below="@+id/consumo"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignRight="@+id/consumo"
                    android:layout_alignEnd="@+id/consumo"
                    android:layout_alignLeft="@+id/consumo"
                    android:layout_alignStart="@+id/consumo"
                    android:spinnerMode="dropdown">
                </Spinner>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Go"
                    android:text="@string/ButtonCalc"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="175dp" />

                <TextView
                    android:id="@+id/Preresultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/Pre1"
                    android:gravity="end"
                    android:layout_alignTop="@+id/km"
                    android:layout_toRightOf="@+id/km"
                    android:layout_toEndOf="@+id/km" />

                <TextView
                    android:id="@+id/Preresultado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/Pre2"
                    android:gravity="end"
                    android:layout_below="@+id/Preresultado"
                    android:layout_alignRight="@+id/Preresultado"
                    android:layout_alignEnd="@+id/Preresultado" />

                <TextView
                    android:id="@+id/Preresultado3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/Pre3"
                    android:gravity="end"
                    android:layout_below="@+id/Preresultado2"
                    android:layout_alignEnd="@+id/Preresultado2"
                    android:layout_alignRight="@+id/Preresultado2" />

                <TextView
                    android:id="@+id/resultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text=""
                    android:gravity="end"
                    android:layout_alignTop="@+id/Preresultado"
                    android:layout_toRightOf="@+id/Preresultado"/>

                <TextView
                    android:id="@+id/resultado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text=""
                    android:gravity="end"
                    android:layout_alignTop="@+id/Preresultado2"
                    android:layout_toRightOf="@+id/Preresultado2" />/>

                <TextView
                    android:id="@+id/resultado3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text=""
                    android:gravity="end"
                    android:layout_alignTop="@+id/Preresultado3"
                    android:layout_toRightOf="@+id/Preresultado3" />
            </RelativeLayout>//Calculadora

            <TextView
                android:id="@+id/Developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/Rutas"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:text="@string/Dev"
                android:paddingBottom="20dp"/>//Final

        </RelativeLayout>

    </ScrollView>

</LinearLayout>